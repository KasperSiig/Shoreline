                        <VBox fx:id="vBoxPen" alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0">
                           <padding>
                              <Insets top="10.0" />
                           </padding></VBox>
                     </content>
                  </ScrollPane>
               </center>
            </BorderPane>
         </content>
      </Tab>
      <Tab closable="false" text="Finished">
