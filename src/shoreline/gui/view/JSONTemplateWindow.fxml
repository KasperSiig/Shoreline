<BorderPane fx:id="borderPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="shoreline.gui.controller.JSONTemplateWindowController">
   <left>
      <VBox alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
         <children>
            <Label text="Input JSON File" />
            <HBox alignment="CENTER_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0" spacing="5.0">
               <children>
                  <HBox fx:id="hBoxTarget" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="0.0">
                     <children>
                        <TextField fx:id="txtInputPath" editable="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="0.0">
                           <cursor>
                              <Cursor fx:constant="DEFAULT" />
                           </cursor>
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </TextField>
                        <JFXButton maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="0.0" onAction="#handleInputFile" text="📁" />
                     </children>
                     <styleClass>
                        <String fx:value="hBox-custom-border" />
                        <String fx:value="txtfield-custom" />
                     </styleClass>
                  </HBox>
               </children>
               <styleClass>
                  <String fx:value="button-icon" />
                  <String fx:value="button-icon-hover" />
               </styleClass>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </left>
   <center>
      <TextArea fx:id="txtAreaJson" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="475.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="25.0" />
         </BorderPane.margin>
      </TextArea>
   </center>
   <right>
      <VBox fx:id="vBoxVariable" spacing="20.0" BorderPane.alignment="CENTER_RIGHT">
         <children>
            <Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Set Static Values" />
            <JFXComboBox fx:id="comboVariables" promptText="Choose Variable" />
            <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
               <children>
                  <JFXRadioButton fx:id="rbCustom" text=" ">
                     <toggleGroup>
                        <ToggleGroup fx:id="variables" />
                     </toggleGroup>
                  </JFXRadioButton>
                  <JFXTextField fx:id="txtCustom" labelFloat="true" promptText="Custom Text..." />
               </children>
            </HBox>
            <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
               <children>
                  <JFXRadioButton fx:id="rbPredefined" text=" " toggleGroup="$variables" />
                  <JFXComboBox fx:id="comboPredefined" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="Predefined Value" />
               </children>
            </HBox>
            <JFXButton fx:id="btnStatic" maxWidth="1.7976931348623157E308" onAction="#handleSetStatic" text="Set Static" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="25.0" />
         </BorderPane.margin>
      </VBox>
   </right>
   <bottom>
      <JFXButton fx:id="btnSave" maxWidth="1.7976931348623157E308" onAction="#handleSave" text="Save Template">
         <BorderPane.margin>
            <Insets bottom="20.0" left="10.0" right="10.0" />
         </BorderPane.margin></JFXButton>
   </bottom>
   <top>
      <AnchorPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
         <children>
            <JFXButton fx:id="btnBack" onAction="#handleBack" text="&lt;&lt;" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0" />
         </children>
      </AnchorPane>
   </top>
</BorderPane>
